#!/bin/sh
# Copyright (C) 2007 OpenWrt.org

/etc/init.d/fullconenat enabled && {

	[ "$ACTION" = ifup -o "$ACTION" = wan ] && {
		/etc/init.d/fullconenat restart
	}
	
	[ "$ACTION" = ifdown -o "$ACTION" = wan ] && {
		/etc/init.d/fullconenat restart
	}

	[ "$ACTION" = ifup -o "$ACTION" = lan ] && {
		/etc/init.d/fullconenat restart
	}
	
	[ "$ACTION" = ifdown -o "$ACTION" = lan ] && {
		/etc/init.d/fullconenat restart
	}
	
}
